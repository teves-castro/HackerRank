{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "command": "sh",
    "args": [
        "${workspaceRoot}/build.sh"
    ],
    "options": {
        "cwd": "${workspaceRoot}"
    },
    "isShellCommand": true,
    "tasks": [
        {
            "taskName": "build",
            "isBuildCommand": true,
            "problemMatcher": "$msCompile"
        },
        {
            "taskName": "test",
            "isTestCommand": true,
            "problemMatcher": "$msCompile"
        },
        {
            "taskName": "clean"
        }
    ]
}